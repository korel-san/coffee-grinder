{
  "name": "news-aggregator",
  "version": "0.1.0",
  "description": "",
  "main": "index.ts",
  "type": "module",
  "scripts": {
    "cleanup": "node -r dotenv/config --no-warnings --experimental-fetch src/0.cleanup",
    "load": "node -r dotenv/config --no-warnings --experimental-fetch src/1.load",
    "presummarize": "node -r dotenv/config --no-warnings --experimental-fetch src/presummarize",
    "summarize": "node -r dotenv/config --no-warnings --experimental-fetch src/2.summarize",
    "test": "node --test --experimental-test-module-mocks \"tests/**/*.test.js\"",
    "test:e2e": "node --env-file-if-exists=.env.e2e -r dotenv/config --test \"tests-e2e/**/*.test.js\"",
    "test:e2e:summarize": "node --env-file-if-exists=.env.e2e -r dotenv/config --test \"tests-e2e/summarize.e2e.test.js\"",
    "test:e2e:slides": "node --env-file-if-exists=.env.e2e -r dotenv/config --test \"tests-e2e/slides.e2e.test.js\"",
    "test:summarize": "node --test --experimental-test-module-mocks tests/summarize.test.js",
    "slides": "node -r dotenv/config --no-warnings --experimental-fetch src/3.slides",
    "screenshots": "node -r dotenv/config --no-warnings --experimental-fetch src/screenshots",
    "upload-img": "node -r dotenv/config --no-warnings --experimental-fetch src/upload-img",
    "audio": "node -r dotenv/config --no-warnings --experimental-fetch src/4.audio",
    "prepare": "git config core.hooksPath .githooks"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=24 <25"
  },
  "dependencies": {
    "@googleapis/drive": "^8.14.0",
    "@googleapis/sheets": "^9.3.1",
    "@googleapis/slides": "^1.2.0",
    "@types/node": "^22.13.0",
    "axios": "^1.7.9",
    "dotenv": "^16.4.7",
    "elevenlabs": "^1.50.4",
    "google-auth-library": "^9.15.1",
    "html-to-text": "^9.0.5",
    "jsdom": "^26.0.0",
    "nanoid": "^5.0.9",
    "openai": "^4.82.0",
    "valtio": "^2.1.3",
    "xml-js": "^1.6.11"
  },
  "devDependencies": {
    "@playwright/test": "^1.50.1"
  }
}
